<% content_for :title, "S'inscrire" %>

<div class="row justify-content-center">
  <div class="col-md-5">
    <div class="card border-secondary">
      <div class="card-body p-4">
        <h2 class="card-title text-center mb-4">Créer un compte</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :email, "Adresse e-mail", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "form-control bg-dark text-light border-secondary" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Mot de passe", class: "form-label" %>
            <% if @minimum_password_length %>
              <small class="text-muted d-block mb-1"><%= @minimum_password_length %> caractères minimum</small>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password",
                class: "form-control bg-dark text-light border-secondary" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "form-control bg-dark text-light border-secondary" %>
          </div>

          <div class="d-grid mt-4">
            <%= f.submit "S'inscrire", class: "btn btn-warning" %>
          </div>
        <% end %>

        <hr class="border-secondary my-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
