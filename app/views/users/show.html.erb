<% content_for :title, "#{@user.first_name} #{@user.last_name}" %>

<div class="row justify-content-center">
  <div class="col-md-8">

    <%# Carte profil %>
    <div class="card border-secondary mb-4">
      <div class="card-body">
        <div class="d-flex gap-3 align-items-center">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "rounded-circle flex-shrink-0", width: 80, height: 80, style: "object-fit: cover;" %>
          <% else %>
            <img src="https://api.dicebear.com/9.x/avataaars/svg?seed=<%= @user.email %>" width="80" height="80" class="rounded-circle flex-shrink-0" alt="Avatar">
          <% end %>
          <div>
            <h2 class="card-title mb-1">
              <%= @user.first_name.presence || "" %> <%= @user.last_name.presence || "" %>
            </h2>
            <p class="text-muted mb-2"><%= @user.email %></p>
            <% if @user.description.present? %>
              <p class="card-text"><%= @user.description %></p>
            <% else %>
              <p class="text-muted fst-italic">Aucune description renseign√©e.</p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-footer bg-transparent border-secondary d-flex gap-2">
        <%= link_to "Modifier email / mot de passe", edit_user_registration_path, class: "btn btn-outline-secondary btn-sm" %>
        <%= link_to "Modifier le profil", edit_user_path(@user), class: "btn btn-outline-warning btn-sm" %>
      </div>
    </div>

    <%# √âv√©nements organis√©s %>
    <h4 class="mb-3">Mes √©v√©nements <span class="badge bg-secondary"><%= @organized_events.count %></span></h4>

    <% if @organized_events.any? %>
      <div class="list-group">
        <% @organized_events.each do |event| %>
          <div class="list-group-item list-group-item-action bg-dark border-secondary d-flex justify-content-between align-items-center">
            <div>
              <%= link_to event.title, event_path(event), class: "text-warning text-decoration-none fw-semibold" %>
              <small class="text-muted d-block">üìÖ <%= event.start_date.strftime("%d/%m/%Y") %> ‚Äî üìç <%= event.location %></small>
            </div>
            <div class="d-flex flex-column align-items-end gap-1">
              <span class="badge bg-warning text-dark"><%= event.price %> ‚Ç¨</span>
              <% if event.validated.nil? %>
                <span class="badge bg-secondary">‚è≥ En attente</span>
              <% elsif event.validated? %>
                <span class="badge bg-success">‚úÖ Valid√©</span>
              <% else %>
                <span class="badge bg-danger">‚ùå Refus√©</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted fst-italic">Vous n'avez pas encore cr√©√© d'√©v√©nement.</p>
      <%= link_to "Cr√©er votre premier √©v√©nement", new_event_path, class: "btn btn-warning btn-sm" %>
    <% end %>

  </div>
</div>
