<% content_for :title, "Mot de passe oublié" %>

<div class="row justify-content-center">
  <div class="col-md-5">
    <div class="card border-secondary">
      <div class="card-body p-4">
        <h2 class="card-title text-center mb-2">Mot de passe oublié ?</h2>
        <p class="text-muted text-center small mb-4">Entrez votre adresse e-mail pour recevoir les instructions de réinitialisation.</p>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :email, "Adresse e-mail", class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "form-control bg-dark text-light border-secondary" %>
          </div>

          <div class="d-grid mt-4">
            <%= f.submit "Envoyer les instructions", class: "btn btn-warning" %>
          </div>
        <% end %>

        <hr class="border-secondary my-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
