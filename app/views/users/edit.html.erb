<% content_for :title, "Modifier mon profil" %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <h2 class="mb-4">Modifier mon profil</h2>

    <%= form_with model: @user, url: user_path(@user), method: :patch, multipart: true do |f| %>

      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :first_name, "Prénom", class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control bg-dark text-light border-secondary", placeholder: "Votre prénom" %>
      </div>

      <div class="mb-3">
        <%= f.label :last_name, "Nom", class: "form-label" %>
        <%= f.text_field :last_name, class: "form-control bg-dark text-light border-secondary", placeholder: "Votre nom" %>
      </div>

      <div class="mb-3">
        <%= f.label :description, "Description", class: "form-label" %>
        <%= f.text_area :description, rows: 4, class: "form-control bg-dark text-light border-secondary", placeholder: "Parlez-nous de vous..." %>
      </div>

      <div class="mb-3">
        <%= f.label :avatar, "Photo de profil", class: "form-label" %>
        <% if @user.avatar.attached? %>
          <div class="mb-2 d-flex align-items-center gap-3">
            <%= image_tag @user.avatar, class: "rounded-circle", width: 64, height: 64, style: "object-fit: cover;" %>
            <span class="text-muted small">Photo actuelle — choisissez un fichier pour la remplacer</span>
          </div>
        <% else %>
          <div class="mb-2 d-flex align-items-center gap-3">
            <img src="https://api.dicebear.com/9.x/avataaars/svg?seed=<%= @user.email %>" width="64" height="64" class="rounded-circle" alt="Avatar par défaut">
            <span class="text-muted small">Avatar généré automatiquement — ajoutez une photo pour le personnaliser</span>
          </div>
        <% end %>
        <%= f.file_field :avatar, class: "form-control bg-dark text-light border-secondary", accept: "image/*" %>
      </div>

      <div class="d-flex gap-2 mt-4">
        <%= f.submit "Enregistrer", class: "btn btn-warning" %>
        <%= link_to "Annuler", user_path(@user), class: "btn btn-outline-secondary" %>
      </div>

    <% end %>
  </div>
</div>
