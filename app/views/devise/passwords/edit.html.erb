<% content_for :title, "Nouveau mot de passe" %>

<div class="row justify-content-center">
  <div class="col-md-5">
    <div class="card border-secondary">
      <div class="card-body p-4">
        <h2 class="card-title text-center mb-4">Choisir un nouveau mot de passe</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="mb-3">
            <%= f.label :password, "Nouveau mot de passe", class: "form-label" %>
            <% if @minimum_password_length %>
              <small class="text-muted d-block mb-1"><%= @minimum_password_length %> caract√®res minimum</small>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
                class: "form-control bg-dark text-light border-secondary" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "form-control bg-dark text-light border-secondary" %>
          </div>

          <div class="d-grid mt-4">
            <%= f.submit "Changer mon mot de passe", class: "btn btn-warning" %>
          </div>
        <% end %>

        <hr class="border-secondary my-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
