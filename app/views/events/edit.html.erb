<% content_for :title, "Modifier #{@event.title}" %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <h2 class="mb-4">Modifier l'événement</h2>

    <%= form_with model: @event do |f| %>

      <% if @event.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @event.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :title, "Titre", class: "form-label" %>
        <%= f.text_field :title, class: "form-control bg-dark text-light border-secondary", placeholder: "Entre 5 et 140 caractères" %>
      </div>

      <div class="mb-3">
        <%= f.label :description, "Description", class: "form-label" %>
        <%= f.text_area :description, rows: 5, class: "form-control bg-dark text-light border-secondary", placeholder: "Entre 20 et 1000 caractères" %>
      </div>

      <div class="row g-3 mb-3">
        <div class="col-md-6">
          <%= f.label :start_date, "Date de début", class: "form-label" %>
          <%= f.datetime_local_field :start_date, class: "form-control bg-dark text-light border-secondary" %>
        </div>
        <div class="col-md-6">
          <%= f.label :duration, "Durée (en minutes, multiple de 5)", class: "form-label" %>
          <%= f.number_field :duration, class: "form-control bg-dark text-light border-secondary", placeholder: "Ex: 60, 90, 120..." %>
        </div>
      </div>

      <div class="row g-3 mb-3">
        <div class="col-md-6">
          <%= f.label :price, "Prix (en euros)", class: "form-label" %>
          <div class="input-group">
            <%= f.number_field :price, class: "form-control bg-dark text-light border-secondary", placeholder: "Entre 1 et 1000" %>
            <span class="input-group-text bg-dark text-warning border-secondary">€</span>
          </div>
        </div>
        <div class="col-md-6">
          <%= f.label :location, "Lieu", class: "form-label" %>
          <%= f.text_field :location, class: "form-control bg-dark text-light border-secondary", placeholder: "Adresse ou lieu" %>
        </div>
      </div>

      <div class="d-flex gap-2 mt-4">
        <%= f.submit "Enregistrer les modifications", class: "btn btn-warning" %>
        <%= link_to "Annuler", event_path(@event), class: "btn btn-outline-secondary" %>
      </div>

    <% end %>
  </div>
</div>
